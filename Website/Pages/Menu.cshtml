@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
<h2>Combos</h2>
<div>
    @for(int i = 0; i < @Model.Menu.AvailableCombos.Count; i++)
    {
    <div class="menu-item">
        <strong>@Model.Menu.AvailableCombos[i]</strong>: $@Model.Menu.AvailableEntrees[i].Price
        <br /> Calories: @Model.Menu.AvailableEntrees[i].Calories
        <br /> Ingredients:        
        @for (int j = 0; j < @Model.Menu.AvailableEntrees[i].Ingredients.Count; j++)
    {
            <br/>
            <i>@Model.Menu.AvailableEntrees[i].Ingredients[j]</i>            
        }
        <p></p>
    </div>
    }
</div>
